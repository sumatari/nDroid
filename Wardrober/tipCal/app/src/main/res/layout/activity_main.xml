<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LandingPage"
    android:id="@+id/ReLayout"
    android:background="@drawable/background"
    android:clickable="false">

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"

        android:background="@drawable/button2"
        android:id="@+id/genBut"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/speBut"
        android:layout_alignStart="@+id/speBut" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"

        android:id="@+id/speBut"
        android:background="@drawable/button"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/delBut"
        android:layout_alignStart="@+id/delBut" />



    <Button

        android:layout_width="150dp"
        android:layout_height="70dp"

        android:id="@+id/delBut"
        android:background="@drawable/delbut"
        android:visibility="visible"

        android:layout_below="@+id/manBut"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"

        android:id="@+id/manBut"
        android:background="@drawable/addbut"
        android:backgroundTintMode="multiply"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="86dp" />

</RelativeLayout>
