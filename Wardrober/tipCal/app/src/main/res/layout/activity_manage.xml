<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobapp.sumaira.tipcal.ManageActivity"
    android:background="@drawable/background"
    android:id="@+id/Rel">

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/homeicon"
        android:id="@+id/mainApp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/save"
        android:id="@+id/save"
        android:layout_alignTop="@+id/mainApp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView4"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#ff882e45"
        android:typeface="sans" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weatherSpinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/eventSpinner"
        android:layout_alignLeft="@+id/eventSpinner"
        android:layout_alignStart="@+id/eventSpinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weather:"
        android:id="@+id/textView7"
        android:layout_below="@+id/eventSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="sans"
        android:textColor="#ff882e45" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventSpinner"
        android:spinnerMode="dropdown"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/itemSpinner"
        android:layout_alignStart="@+id/itemSpinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Event"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/eventSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:typeface="sans"
        android:textColor="#ff882e45" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemSpinner"
        android:spinnerMode="dropdown"
        android:layout_above="@+id/textView8"
        android:layout_toRightOf="@+id/mainApp"
        android:layout_toEndOf="@+id/mainApp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pattern"
        android:id="@+id/textView6"
        android:layout_below="@+id/weatherSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff882e45" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Color"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textColor="#ff882e45" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fabric"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp"
        android:textColor="#ff882e45" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hint:"
        android:id="@+id/textView11"
        android:layout_below="@+id/fabricSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff882e45" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/patternSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/weatherSpinner"
        android:layout_alignStart="@+id/weatherSpinner" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fabricSpinner"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignLeft="@+id/patternSpinner"
        android:layout_alignStart="@+id/patternSpinner"
        android:layout_alignRight="@+id/hint"
        android:layout_alignEnd="@+id/hint" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/color"
        android:inputType="text"
        android:layout_above="@+id/fabricSpinner"
        android:layout_alignLeft="@+id/patternSpinner"
        android:layout_alignStart="@+id/patternSpinner"
        android:layout_toLeftOf="@+id/save" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/color"
        android:layout_alignStart="@+id/color"
        android:layout_toLeftOf="@+id/save"
        android:layout_toStartOf="@+id/save" />

</RelativeLayout>
