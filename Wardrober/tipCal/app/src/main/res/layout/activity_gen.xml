<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobapp.sumaira.tipcal.GenActivity"
    android:background="@drawable/background"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Premium Feature"
        android:id="@+id/General_Title"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dresslist"
        android:layout_alignEnd="@+id/dresslist" />


    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/homeicon"
        android:id="@+id/mainApp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/save"
        android:id="@+id/showDresses"
        android:layout_alignBottom="@+id/mainApp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:visibility="visible" />
    <ListView
        android:id="@+id/dresslist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#00ff5b92"
        android:layout_marginTop="185dp"
        android:layout_below="@+id/General_Title"
        android:layout_centerHorizontal="true">
    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/city_field"
        android:layout_marginTop="51dp"
        android:text="   72F"
        android:textSize="30dp"
        android:textColor="#ff5b1082"
        android:layout_below="@+id/General_Title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_temperature_field"
        android:text="Suggestion List"
        android:layout_below="@+id/updated_field"
        android:layout_alignLeft="@+id/updated_field"
        android:layout_alignStart="@+id/updated_field" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/updated_field"
        android:text="      Hot"
        android:textSize="20dp"
        android:textColor="#e5a9213a"
        android:layout_below="@+id/city_field"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
