<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Rel"
        android:layout_width="320px"
        android:layout_height="320px"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="144dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#92dbdbdb">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Signature Analysis"
        android:id="@+id/textView"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff075151" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Please Sign in the following given area"
        android:id="@+id/textView2"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analyze"
        android:id="@+id/analyze"
        android:layout_below="@+id/Rel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/traits"
        android:textColor="#ff600f09"
        android:layout_below="@+id/analyze"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/traits2"
        android:textColor="#ff9f1252"
        android:layout_below="@+id/traits"
        android:layout_alignLeft="@+id/traits"
        android:layout_alignStart="@+id/traits" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manual Analysis"
        android:id="@+id/analyze2"
        android:layout_below="@+id/traits2"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout><!-- From: file:/C:/Users/Sumaira/AndroidStudioProjects/Doodle/app/src/main/res/layout/activity_main.xml -->